{
  "name": "richiesta-assistenza-backend",
  "version": "6.1.0",
  "description": "Backend API for Sistema Richiesta Assistenza",
  "main": "dist/server.js",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc || echo 'Build completed with errors'",
    "start": "node dist/server.js",
    "start:prod": "npx prisma migrate deploy && node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio --port 5555",
    "prisma:seed": "ts-node prisma/seed.ts",
    "seed:legal-config": "ts-node prisma/seed-legal-config.ts",
    "db:reset": "prisma db push --force-reset && npm run prisma:seed",
    "recalculate-travel": "ts-node scripts/recalculate-travel-info.ts",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "test:ui": "NODE_ENV=test vitest --ui --port 8080",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
